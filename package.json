{
  "name": "zerion-wallet",
  "version": "0.0.1",
  "description": "A web3 wallet extension",
  "main": "dist/mainfest.json",
  "scripts": {
    "start": "npm-run-all --parallel start:app type-check:watch",
    "start:app": "NODE_ENV=development webpack --watch --progress",
    "build": "NODE_ENV=production webpack",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --pretty --watch",
    "pretest": "npm run lint",
    "test": "echo \"Error: no test specified\" && exit 1",
    "posttest": "npm run format",
    "lint": "eslint . --cache --fix --ext .ts,.tsx,.js",
    "format": "prettier --loglevel warn --write \"**/*.{ts,tsx,css,md}\"",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/zeriontech/zerion-wallet-extension.git"
  },
  "keywords": [
    "Wallet",
    "Web3",
    "Browser",
    "Wallet"
  ],
  "author": "everdimension <everdimension@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/zeriontech/zerion-wallet-extension/issues"
  },
  "homepage": "https://github.com/zeriontech/zerion-wallet-extension#readme",
  "devDependencies": {
    "@babel/cli": "^7.17.10",
    "@babel/core": "^7.17.10",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.5",
    "@svgr/webpack": "^6.2.1",
    "@types/chrome": "^0.0.183",
    "@types/react": "^18.0.8",
    "@types/react-dom": "^18.0.3",
    "@types/webextension-polyfill": "^0.8.3",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "babel-loader": "^8.2.5",
    "copy-webpack-plugin": "^10.2.4",
    "css-loader": "=5.1.3",
    "eslint": "^8.14.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.4.1",
    "mini-css-extract-plugin": "^2.6.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "react-refresh": "^0.13.0",
    "style-loader": "^3.3.1",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "typescript": "^4.6.4",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --cache --fix",
    "*.{ts,tsx,css,md}": "prettier --write"
  },
  "dependencies": {
    "@json-rpc-tools/provider": "^1.7.6",
    "@json-rpc-tools/utils": "^1.7.6",
    "@metamask/browser-passworder": "^3.0.0",
    "blockies": "^0.0.2",
    "ethers": "^5.6.4",
    "events": "^3.3.0",
    "immer": "^9.0.12",
    "nanoid": "^3.3.4",
    "normalize.css": "^8.0.1",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-query": "^3.38.0",
    "react-router-dom": "^6.3.0",
    "store-unit": "^1.0.3-1",
    "webextension-polyfill": "^0.9.0"
  }
}
