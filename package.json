{
  "name": "zerion-wallet",
  "version": "0.0.1",
  "description": "A web3 wallet extension",
  "main": "dist/mainfest.json",
  "scripts": {
    "start": "npm-run-all --parallel start:app type-check:watch",
    "start:app": "NODE_ENV=development webpack --watch --progress",
    "build": "NODE_ENV=production webpack",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --pretty --watch",
    "pretest": "npm run lint",
    "test": "echo \"Error: no test specified\" && exit 1",
    "posttest": "npm run format",
    "lint": "eslint . --cache --fix --ext .ts,.tsx,.js",
    "format": "prettier --loglevel warn --write \"**/*.{ts,tsx,css,md}\"",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/zeriontech/zerion-wallet-extension.git"
  },
  "keywords": [
    "Wallet",
    "Web3",
    "Browser",
    "Wallet"
  ],
  "author": "everdimension",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/zeriontech/zerion-wallet-extension/issues"
  },
  "homepage": "https://github.com/zeriontech/zerion-wallet-extension#readme",
  "devDependencies": {
    "@babel/cli": "^7.17.10",
    "@babel/core": "^7.17.10",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@types/chrome": "^0.0.183",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "babel-loader": "^8.2.5",
    "copy-webpack-plugin": "^10.2.4",
    "eslint": "^8.14.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.4.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "react-refresh": "^0.13.0",
    "typescript": "^4.6.4",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --cache --fix",
    "*.{ts,tsx,css,md}": "prettier --write"
  }
}
