{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "ESNext",
    "target": "es2019",
    "moduleResolution": "node",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "esModuleInterop": true,
    "types": ["chrome", "node"],
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "outDir": "./dist"
  },
  "exclude": ["./node_modules"],
  "include": ["src", "__tests__"]
}
